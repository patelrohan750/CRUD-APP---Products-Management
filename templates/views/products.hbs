    {{>headerLinks}}
</head>

<body>
   {{>navbar}}
    <div class="container mt100">
        <div class="row justify-content-md-center">

            <div class="col-md-10 ">
                <div class="custombtn">
                    <a href="/add-product">Add Product</a>
                </div>
                <table class="table" id="productsTable">
                    <thead class="">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Status</th>
                            
                            <th scope="col">Url</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        {{#each products}}

                        <tr>
                            <th>{{inc @key}}</th>
                            <td>{{this.prod_name}}</td>
                            <td>{{this.prod_dec}}</td>
                            <td>{{this.prod_price}}</td>
                             <td>{{this.prod_url}}</td>
                            <td>{{this.prod_status}}</td>
                           
                            <td class="action">
                                <a href="/update-product/{{this._id}}">
                            <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/api/product/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');">
                            <i class="fas fa-trash"></i>
                            </a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
   <div>
      
